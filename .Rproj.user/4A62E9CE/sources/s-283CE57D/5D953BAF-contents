library(ggplot2)
my_plot <- ggplot(mtcars, aes(x = mpg, y = cyl)) +
  geom_point()
x <- R2PptxElement("Google Shape;18;p4", my_plot)
x

slide <- R2PptxSlide(layout_name = "TITLE_AND_BODY")
slide <- slide + x
chapter <- R2PptxChapter("A new chapter")
chapter <- chapter + slide

template_path <- "~/Downloads/Untitled presentation.pptx"
presentation <- R2PptxPresentation("My Presentation", template_path)
presentation <- presentation + chapter
path <- tempfile(fileext = ".pptx")
write_pptx(presentation, path)

length(presentation)
length(chapter)
length(slide) 

system(paste("open", path))
