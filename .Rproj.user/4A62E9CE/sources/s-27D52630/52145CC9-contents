#' @include generics.R
#' @include location.R
NULL

#' Element
#'
#' An S4 An class to represent text, a flextable, an image, a ggplot2, etc we
#' add to a slide.
#' @slot key
setClass(
  "R2PptxElement",
  slots = c(
    key = "R2PptxLocation",
    value = "ANY"
  )
)

R2PptxElement <- function(key, value) {
  if (missing(key)) {
    rlang::abort("`key` was missing. See `officer::layout_summary()` for layout options.")
  }

  new("R2PptxElement", key = asR2PptxLocation(key), value = value)
}

element <- R2PptxElement
